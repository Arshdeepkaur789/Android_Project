<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bgheader"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:drawableTop="@drawable/bgheader"
        android:text="TextView" />

    <EditText
        android:id="@+id/CardNumberLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/bgsearch"
        android:drawableLeft="@drawable/cardno"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Card Number"
        android:inputType="number"
        android:padding="10dp" />

    <EditText
        android:id="@+id/PinNumberLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/bgsearch"
        android:drawableLeft="@drawable/keycard"
        android:ems="10"
        android:drawablePadding="10dp"
        android:hint="Pin Number"
        android:inputType="numberPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="350dp"
        android:text="Login"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="503dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="40dp"
        android:text="Login"
        android:textColor="#F8F1F1"
        android:textSize="28sp" />


</RelativeLayout>