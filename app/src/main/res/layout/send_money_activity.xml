<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/line2"
        android:layout_width="265dp"
        android:layout_height="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        android:background="#D81313"
        android:text=" " />

    <TextView
        android:id="@+id/line4"
        android:layout_width="265dp"
        android:layout_height="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="400dp"
        android:background="#D81313"
        android:text=" " />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="180dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="210dp" />

    <EditText
        android:id="@+id/AccountNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/bgsearch"
        android:drawableLeft="@drawable/bankaccounts"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Account Number"
        android:inputType="number"
        android:padding="10dp" />

    <EditText
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/bgsearch"
        android:drawableLeft="@drawable/dollar"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="number"
        android:padding="10dp" />

    <Button
        android:id="@+id/send_money_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="640dp"
        android:text="Send Money" />

    <EditText
        android:id="@+id/Send_Money_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/bgsearch"
        android:drawableLeft="@drawable/usernamecard"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:drawableTop="@drawable/bgheader" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:text="Send Money"
        android:textColor="#F6F0F0"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/backttxt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"

        android:drawableTop="?attr/actionModeCloseDrawable" />

    <EditText
        android:id="@+id/tamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/bgsearch"
        android:drawableLeft="@drawable/dollar"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="number"
        android:padding="10dp"

        android:textAppearance="@style/TextAppearance.AppCompat.Small"

        />

    <Button
        android:id="@+id/pesonal_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="310dp"
        android:text="Personal Account" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="180dp"
        android:text="From Account"
        android:textColor="#1879D8"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="210dp"
        android:text="To Account"
        android:textColor="#1974CD"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:text="Amount Transfer In Personal Account"
        android:textColor="#FA1E1E"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="370dp"
        android:text="Amount Transfer In Diferent Account"
        android:textColor="#FA1E1E"
        android:textStyle="bold" />
</RelativeLayout>